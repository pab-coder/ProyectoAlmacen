@model List<CursoMvc.Models.TableViewModels.SpareTableViewModel>
@{
    ViewBag.Title = "Refacciones";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12" style="margin-bottom:10px;">
        <input type="button" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/Spare/Add")'" value="Registrar" />
    </div>
    <div>
        <asp:GridView id="dg" runat="server" >

        </asp:GridView>
    </div>
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>ID</th>
                <th>Partnumber</th>
                <th>Description</th>
                <th>Machine</th>
                <th>Quantity</th>
                <th>LPN</th>
                <th>Ilustration</th>
            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.Id</td>
                    <td>@oElemento.Partnumber</td>
                    <td>@oElemento.Description</td>
                    <td>@oElemento.Machine</td>
                    <td>@oElemento.Quantity</td>
                    <td>@oElemento.Lpn</td>
                    <td><img width="50" height="50" src="@oElemento.Ilustration" /></td>
                    <td>
                        <input type="button" onclick="jsDelete(@oElemento.Id);" value="Eliminar" class="btn btn-danger" />
                        <input type="button" onclick="document.location.href='@Url.Content("~/User/Edit/"+oElemento.Id)'" value="Editar" class="btn btn-default" />
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
