@model CursoMvc.Models.ViewModels.FileViewModel
@{
    ViewBag.Title = "Cargar Archivos";
    List<SelectListItem> location = (List<SelectListItem>)ViewBag.location;
    List<SelectListItem> machines = (List<SelectListItem>)ViewBag.machines;
}

<h2>@ViewBag.Title</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
    </div>
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm("Save", "File", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
    <div class="row">
        <div class="col-md-6 col-lg-offset-3">
            <div class="form-group" style="margin-top: 20px;margin-bottom:10px; font-size:larger; text-align:left; ">
                <strong>@Html.LabelFor(d => d.SpareImage)</strong>
            </div>
            <div class="form-group">
                @Html.TextBoxFor(c => c.Partnumber, new { @class = "form-control", placeholder = "Número de parte" })
                @Html.ValidationMessageFor(d => d.File, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(c => c.Description, new { @class = "form-control", placeholder = "Descripcion" })
                @Html.ValidationMessageFor(d => d.File, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(c => c.Quantity, new { @class = "form-control", placeholder = "Cantidad" })
                @Html.ValidationMessageFor(d => d.File, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.DropDownListFor(d => d.IdLocation, location, "Seleccione localidad", new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.DropDownListFor(c => c.IdMachines, machines, "Seleccione maquina", new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(d => d.SpareImage, new { @class = "form-control", type = "file", accept = " .jpg, .png" })
                @Html.ValidationMessageFor(d => d.SpareImage, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>
    <div class="form-group" style="text-align:left; margin-top:20px; margin-bottom:20px;">
        <input type="submit" class="btn btn-success" value="Guardar" />
    </div>
}
