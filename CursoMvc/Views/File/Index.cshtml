@model CursoMvc.Models.ViewModels.FileViewModel
@{
    ViewBag.Title = "Cargar Archivos";
    List<SelectListItem> location = (List<SelectListItem>)ViewBag.location;
    List<SelectListItem> machines = (List<SelectListItem>)ViewBag.machines;
}

<h2>@ViewBag.Title</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
    </div>
}

@using (Html.BeginForm("Save", "File", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
   
    <div class="row">

        <div class="col-md-6 col-lg-offset-3">
            <div class="form-group" style="margin-top: 20px;margin-bottom:10px; font-size:larger; text-align:left; ">
                <strong>@Html.LabelFor(d => d.File)</strong>
            </div>
            <div class="form-group">
                @Html.TextBoxFor(d => d.File, new { @class = "form-control", type = "file", accept = ".pdf, .xlsx" })
                @Html.ValidationMessageFor(d => d.File, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group" style="text-align:left; margin-top:20px; margin-bottom:20px;">
        <input type="submit" class="btn btn-success" value="Guardar" />
    </div>
}

